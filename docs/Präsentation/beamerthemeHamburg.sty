%\DeclareOptionBeamer{compress}{\beamer@compresstrue}
%\ProcessOptionsBeamer

\mode<presentation>

%\useoutertheme{infolines}
\useoutertheme{miniframes}
\useinnertheme{rectangles}
\usecolortheme{beaver}

%\setbeamerfont{block title}{size={}}

\setbeamercolor{title}{fg=white,bg=darkred}
\setbeamercolor{item}{fg=darkred}
\setbeamercolor{subitem}{fg=darkred}
\setbeamercolor{subsubitem}{fg=darkred}
\setbeamercolor{itemize item}{fg=darkred}
\setbeamercolor{itemize subitem}{fg=darkred}
\setbeamercolor{itemize subsubitem}{fg=darkred}
\setbeamercolor{enumerate item}{fg=darkred}
\setbeamercolor{enumerate subitem}{fg=darkred}
\setbeamercolor{enumerate subsubitem}{fg=darkred}
\setbeamercolor{section number projected}{bg=darkred}
\setbeamercolor{subsection number projected}{bg=darkred}
\setbeamercolor{subsubsection number projected}{bg=darkred}
\setbeamercolor{section in head/foot}{fg=white,bg=darkred}
\setbeamercolor{subsection in head/foot}{fg=black,bg=white!90!black}
\setbeamercolor{frametitle}{fg=black,bg=white!95!black}
%\setbeamercolor{upper separation line head}{bg=darkred}
%\setbeamercolor{middle separation line head}{bg=darkred}
%\setbeamercolor{lower separation line head}{bg=darkred}
\setbeamercolor{block title}{fg=white,bg=darkred}
\setbeamercolor{block body}{fg=black,bg=white!90!black}
\setbeamercolor{caption name}{fg=darkred}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{footline}[frame number]

\mode<all>
